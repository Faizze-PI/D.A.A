#include <stdio.h>

int reverse = 0;

void findReverse(int num) {
    if (num == 0) {
        return;
    }
    reverse = reverse * 10 + num % 10;
    findReverse(num / 10);
}

int main() {
    int number;
    printf("Enter a number: ");
    scanf("%d", &number);
    
    findReverse(number);
    
    printf("Reverse of the number: %d", reverse);
    
    return 0;
}
